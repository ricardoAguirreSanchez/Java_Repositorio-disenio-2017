<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
			 version="2.0">
	<persistence-unit name="DDS_TEST">

		<description>
			Persistence unit for JPA with Hibernate
		</description>
		<class>com.utn.model.Usuario</class>
		<class>com.utn.model.Empresa</class>
		<class>com.utn.model.Indicador</class>
		<class>com.utn.model.Metodologia</class>
		<class>com.utn.model.Cuenta</class>
		<class>com.utn.model.CuentaValores</class>

		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/dds_utn_test" />
			<property name="javax.persistence.jdbc.user" value="dds" />
			<property name="javax.persistence.jdbc.password" value="dds" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.hbm2ddl.auto" value="create" />

		</properties>

	</persistence-unit>
</persistence>
